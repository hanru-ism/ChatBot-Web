# Groq API Configuration
GROQ_API_KEY=your_groq_api_key_here

# Server Configuration
PORT=3000
NODE_ENV=development

# API Base URL (for frontend API calls)
# Leave empty for same-origin requests, set to full URL for different servers
API_BASE_URL=

# CORS Configuration
# Comma-separated list of allowed origins for CORS
# Leave empty to use default development origins
ALLOWED_ORIGINS=

# Frontend URL (for production CORS)
FRONTEND_URL=http://localhost:3000

# Security Configuration
# Set to 'true' in production for enhanced security
ENABLE_STRICT_CORS=false
ENABLE_REQUEST_LOGGING=true
